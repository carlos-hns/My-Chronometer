<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashActivity"

    android:background="@color/purpleblue">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.3"
        android:orientation="horizontal" />


    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"

        android:src="@drawable/logo" />


    <TextView
        android:id="@+id/madeby_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/myname_textview"

        android:text="@string/made_by_label"
        android:textSize="10sp"
        android:textColor="@color/neongreenblue"
        android:fontFamily="@font/robotoregular"
        />

    <TextView
        android:id="@+id/myname_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="50dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="@string/my_name_label"
        android:textSize="10sp"
        android:textColor="@color/neongreenblue"
        android:fontFamily="@font/robotoregular" />

</androidx.constraintlayout.widget.ConstraintLayout>